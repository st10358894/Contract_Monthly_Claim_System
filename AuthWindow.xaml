<Window x:Class="CMCSPrototype.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CMCS Authentication" Height="450" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Contract Monthly Claim System" FontSize="20" 
                   Margin="20,10" HorizontalAlignment="Center"
                   FontWeight="Bold"/>

        <!-- Tab Control for Login and Register -->
        <TabControl Grid.Row="1" Margin="20" x:Name="tabControl" BorderBrush="#FF00BFFF">
            <!-- Login Tab -->
            <TabItem Header="Login">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Content="Username" Margin="0,10,0,5"/>
                    <TextBox Grid.Row="1" Width="250" Padding="5" x:Name="loginUsername"/>

                    <Label Grid.Row="2" Content="Password" Margin="0,10,0,5"/>
                    <PasswordBox Grid.Row="3" Width="250" Padding="5" x:Name="loginPassword"/>

                    <Label Grid.Row="4" Content="Role" Margin="0,10,0,5"/>
                    <ComboBox Grid.Row="5" Width="250" x:Name="loginRoleCombo" SelectedIndex="0">
                        <ComboBoxItem Content="Lecturer"/>
                        <ComboBoxItem Content="Programme Coordinator"/>
                        <ComboBoxItem Content="Academic Manager"/>
                    </ComboBox>

                    <Button Grid.Row="6" Content="Login" Width="120" Margin="0,20,0,0" Background="Black"
                            Click="LoginButton_Click">
                        <Button.Effect>
                            <DropShadowEffect Color="#FF00BFFF" ShadowDepth="0" BlurRadius="10"/>
                        </Button.Effect>
                    </Button>
                </Grid>
            </TabItem>

            <!-- Register Tab -->
            <TabItem Header="Register">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Content="Full Name" Margin="0,10,0,5"/>
                    <TextBox Grid.Row="1" Width="250" Padding="5" x:Name="registerFullName"/>

                    <Label Grid.Row="2" Content="Username" Margin="0,10,0,5"/>
                    <TextBox Grid.Row="3" Width="250" Padding="5" x:Name="registerUsername"/>

                    <Label Grid.Row="4" Content="Password" Margin="0,10,0,5"/>
                    <PasswordBox Grid.Row="5" Width="250" Padding="5" x:Name="registerPassword"/>

                    <Label Grid.Row="6" Content="Role" Margin="0,10,0,5"/>
                    <ComboBox Grid.Row="7" Width="250" x:Name="registerRoleCombo" SelectedIndex="0">
                        <ComboBoxItem Content="Lecturer"/>
                        <ComboBoxItem Content="Programme Coordinator"/>
                        <ComboBoxItem Content="Academic Manager"/>
                    </ComboBox>

                    <Button Grid.Row="8" Content="Register" Width="120" Margin="0,20,0,0"
                            Click="RegisterButton_Click">
                        <Button.Effect>
                            <DropShadowEffect Color="#FFE91E63" ShadowDepth="0" BlurRadius="10"/>
                        </Button.Effect>
                    </Button>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>