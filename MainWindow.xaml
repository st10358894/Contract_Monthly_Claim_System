<Window x:Class="CMCSPrototype.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Contract Monthly Claim System" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <StackPanel Grid.Row="0" Background="white" Margin="0,0,0,10">
            <TextBlock Text="Contract Monthly Claim System" FontSize="24" Margin="20" HorizontalAlignment="Center"/>
        </StackPanel>


        <TabControl Grid.Row="1" Margin="10" x:Name="tabControl" >

            <TabItem Header="Lecturer Dashboard" x:Name="lecturerTab" Background="Black">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>


                    <GroupBox Grid.Row="0" Header="Submit New Claim" Margin="5">
                        <StackPanel Margin="10">
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <Label Content="Hours Worked:" Width="100"/>
                                <TextBox Width="200" Text="0.0"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <Label Content="Hourly Rate:" Width="100"/>
                                <TextBox Width="200" Text="R0.00"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <Label Content="Claim Period:" Width="100"/>
                                <ComboBox Width="200" SelectedIndex="0">
                                    <ComboBoxItem Content="January 2025"/>
                                    <ComboBoxItem Content="February 2025"/>
                                    <ComboBoxItem Content="March 2025"/>
                                    <ComboBoxItem Content="April 2025"/>
                                    <ComboBoxItem Content="May 2025"/>
                                    <ComboBoxItem Content="June 2025"/>
                                    <ComboBoxItem Content="July 2025"/>
                                    <ComboBoxItem Content="August 2025"/>
                                    <ComboBoxItem Content="September 2025"/>
                                </ComboBox>
                            </StackPanel>
                            <Button Content="Upload Supporting Document" Width="200" Margin="0,10" Background="Black" BorderBrush="White">
                                <Button.Effect>
                                    <DropShadowEffect Color="Gray" ShadowDepth="0" BlurRadius="10"/>
                                </Button.Effect>
                            </Button>
                            <Button Content="Submit Claim" Width="200" Margin="0,10"  Background="Black">
                                <Button.Effect>
                                    <DropShadowEffect Color="White"   ShadowDepth="0" BlurRadius="10"/>
                                </Button.Effect>
                            </Button>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Grid.Row="1" Header="Claim Status" Margin="5">
                        <DataGrid AutoGenerateColumns="False" Height="200">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Claim ID" Width="100"/>
                                <DataGridTextColumn Header="Period" Width="100"/>
                                <DataGridTextColumn Header="Amount" Width="100"/>
                                <DataGridTextColumn Header="Status" Width="100"/>
                                <DataGridTextColumn Header="Submission Date" Width="*"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </GroupBox>
                </Grid>
            </TabItem>


            <TabItem Header="Approver Dashboard" x:Name="approverTab" Background="Black">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>


                    <GroupBox Grid.Row="0" Header="Pending Claims" Margin="5">
                        <StackPanel Margin="10">
                            <DataGrid AutoGenerateColumns="False" Height="300">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Claim ID" Width="100"/>
                                    <DataGridTextColumn Header="Lecturer" Width="150"/>
                                    <DataGridTextColumn Header="Period" Width="100"/>
                                    <DataGridTextColumn Header="Amount" Width="100"/>
                                    <DataGridTextColumn Header="Submission Date" Width="*"/>
                                    <DataGridTemplateColumn Header="Actions" Width="150">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Button Content="View Docs" Margin="2"/>
                                                    <Button Content="Approve" Margin="2">
                                                        <Button.Effect>
                                                            <DropShadowEffect Color="#FF00BFFF" ShadowDepth="0" BlurRadius="10"/>
                                                        </Button.Effect>
                                                    </Button>
                                                    <Button Content="Reject" Style="{StaticResource RejectButton}" Margin="2">
                                                        <Button.Effect>
                                                            <DropShadowEffect Color="Beige" ShadowDepth="0" BlurRadius="10"/>
                                                        </Button.Effect>
                                                    </Button>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </GroupBox>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>